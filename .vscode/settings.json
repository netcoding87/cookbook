{
  // format on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": [
    "source.organizeImports",
    "source.fixAll.eslint"
  ],
  // exclude files from search & files explorer
  "files.exclude": {
    "**/.git": true
  },
  // settings for eslint extension
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.options": {
    "configFile": ".eslintrc"
  },
  "eslint.workingDirectories": ["./packages/client", "./packages/server"],
  // settings for git lens extension
  "gitlens.currentLine.enabled": false,
  "gitlens.mode.statusBar.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  // settings for jest extension
  "jest.pathToJest": "yarn test",
  "jest.rootPath": "packages/client"
}

{
  "name": "cookbook",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "lerna run start --parallel",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna test",
    "lint": "lerna run --concurrency 1 --stream lint",
    "electron": "tsc && electron .",
    "pack-win": "electron-packager . --out=dist/out --overwrite --platform=win32 --icon=./packages/client/public/favicon.ico --ignore=/packages/server/node_modules --ignore=/packages/client/node_modules",
    "pack-osx": "electron-packager . --out=dist/out --overwrite --asar --platform=darwin --icon=./packages/client/public/apple-icon.icns --ignore=/packages/server/node_modules --ignore=/packages/client/node_modules",
    "pack-linux": "electron-packager . --out=dist/out --overwrite --asar --platform=linux --icon=./packages/client/public/apple-icon.icns --ignore=/packages/server/node_modules --ignore=/packages/client/node_modules",
    "pack-mas": "electron-packager . --out=dist/out --overwrite --asar --platform=mas --icon=./packages/client/public/apple-icon.icns --ignore=/packages/server/node_modules --ignore=/packages/client/node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env FORCE_COLOR=1 lerna run --concurrency 1 --stream precommit",
      "commit-msg": "cross-env FORCE_COLOR=1 commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.2",
    "electron": "^7.1.8",
    "electron-packager": "^14.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4"
  }
}

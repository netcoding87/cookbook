{
  "name": "cookbook",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "scripts": {
    "start": "lerna run start --parallel",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna test",
    "lint": "lerna run --concurrency 1 --stream lint",
    "electron": "tsc && electron ./dist/main.js",
    "pack-win": "electron-packager . --out=electron/out --overwrite --asar --platform=win32 --icon=./public/favicon.ico",
    "pack-osx": "electron-packager . --out=electron/out --overwrite --asar --platform=darwin --icon=./dist/assets/icon/logo.icns --ignore=/src",
    "pack-linux": "electron-packager . --out=electron/out --overwrite --asar --platform=linux --icon=./dist/assets/icon/logo.icns --ignore=/db --ignore=/e2e --ignore=/src --ignore=.angular-cli.json --ignore=.editorconfig --ignore=.gitignore --ignore=karma.conf.js --ignore=protractor.conf.json --ignore=README.md --ignore=tsconfig.json --ignore=tslint.json",
    "pack-mas": "electron-packager . --out=electron/out --overwrite --asar --platform=mas --icon=./dist/assets/icon/logo.icns --ignore=/db --ignore=/e2e --ignore=/src --ignore=.angular-cli.json --ignore=.editorconfig --ignore=.gitignore --ignore=karma.conf.js --ignore=protractor.conf.json --ignore=README.md --ignore=tsconfig.json --ignore=tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env FORCE_COLOR=1 lerna run --concurrency 1 --stream precommit",
      "commit-msg": "cross-env FORCE_COLOR=1 commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^6.0.3",
    "electron": "^7.1.8",
    "electron-packager": "^14.1.1",
    "eslint": "^6.8.0",
    "husky": "^4.0.5",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}

{
  "name": "cookbook",
  "version": "0.1.0",
  "homepage": ".",
  "main": "./electron/main.js",
  "private": true,
  "scripts": {
    "start": "run-p start-cra start-server",
    "start-cra": "cross-env PORT=3201 react-scripts start",
    "start-server": "cross-env NODE_ENV=development node electron/server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron": "electron .",
    "electron-build": "run-s build electron",
    "pack-win": "electron-packager . --out=out --overwrite --asar --platform=win32 --icon=./public/favicon.ico",
    "pack-osx": "electron-packager . --out=out --overwrite --asar --platform=darwin --icon=./dist/assets/icon/logo.icns --ignore=/src",
    "pack-linux": "electron-packager . --out=out --overwrite --asar --platform=linux --icon=./dist/assets/icon/logo.icns --ignore=/db --ignore=/e2e --ignore=/src --ignore=.angular-cli.json --ignore=.editorconfig --ignore=.gitignore --ignore=karma.conf.js --ignore=protractor.conf.json --ignore=README.md --ignore=tsconfig.json --ignore=tslint.json",
    "pack-mas": "electron-packager . --out=out --overwrite --asar --platform=mas --icon=./dist/assets/icon/logo.icns --ignore=/db --ignore=/e2e --ignore=/src --ignore=.angular-cli.json --ignore=.editorconfig --ignore=.gitignore --ignore=karma.conf.js --ignore=protractor.conf.json --ignore=README.md --ignore=tsconfig.json --ignore=tslint.json"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.11",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "final-form": "^4.18.6",
    "final-form-focus": "^1.1.2",
    "jodit-react": "^1.0.33",
    "json-server": "^0.15.1",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-final-form": "^6.3.3",
    "react-html-parser": "^2.0.2",
    "react-rating": "^2.0.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-select": "^3.0.8",
    "styled-components": "^4.4.1",
    "swr": "^0.1.12",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/final-form-focus": "^1.1.1",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-router-dom": "^5.1.2",
    "@types/react-select": "^3.0.8",
    "@types/styled-components": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "cross-env": "^6.0.3",
    "electron": "7.1.2",
    "electron-packager": "^14.1.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}

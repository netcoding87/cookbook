{
  "name": "cb-server",
  "version": "0.0.1",
  "main": "main.ts",
  "author": "Nick Wittland",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --serial copy --parallel start-codegen start-api",
    "start-api": "ts-node-dev src/index.ts",
    "start-codegen": "gql-gen --watch",
    "build": "npm-run-all --serial copy build-codegen build-api",
    "build-api": "tsc",
    "build-codegen": "gql-gen",
    "test": "jest --watchAll",
    "lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx src --color",
    "precommit": "lint-staged",
    "copy": "shx mkdir -p build && shx mkdir -p build/graphql && shx cp src/graphql/schema.graphql build/graphql/schema.graphql"
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.9.16",
    "apollo-server-express": "^2.9.16",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "nedb": "^1.8.0",
    "nodemon-webpack-plugin": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@graphql-codegen/add": "^1.12.2",
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/fragment-matcher": "^1.12.2",
    "@graphql-codegen/typescript": "^1.12.2",
    "@graphql-codegen/typescript-operations": "^1.12.2",
    "@graphql-codegen/typescript-react-apollo": "^1.12.2",
    "@graphql-codegen/typescript-resolvers": "^1.12.2",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.1",
    "@types/nedb": "^1.8.9",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.8.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "graphql-import": "^1.0.0-beta.2",
    "graphql-import-node": "^0.0.4",
    "graphql-tag": "^2.10.3",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  }
}

{
  "name": "cb-server",
  "version": "0.0.1",
  "main": "main.ts",
  "author": "Nick Wittland",
  "license": "MIT",
  "scripts": {
    "start": "run-p start-codegen start-api",
    "start-api": "cross-env NODE_ENV=development webpack --watch",
    "start-codegen": "gql-gen --watch",
    "build": "run-p build-codegen build-api",
    "build-api": "cross-env NODE_ENV=production webpack",
    "build-codegen": "gql-gen",
    "test": "jest --watchAll",
    "lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx src --color",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.12.0",
    "apollo-server-express": "^2.12.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@graphql-codegen/add": "^1.13.2",
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/fragment-matcher": "^1.13.2",
    "@graphql-codegen/typescript": "^1.13.2",
    "@graphql-codegen/typescript-operations": "^1.13.2",
    "@graphql-codegen/typescript-react-apollo": "^1.13.2",
    "@graphql-codegen/typescript-resolvers": "^1.13.2",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/nedb": "^1.8.9",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-macros": "^2.8.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "graphql-tag": "^2.10.3",
    "jest": "^25.3.0",
    "jest-watch-typeahead": "^0.5.0",
    "nodemon-webpack-plugin": "^4.3.1",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "ts-loader": "^6.2.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}

{
  "name": "cb-client",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "scripts": {
    "start": "cross-env PORT=3201 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test-ci": "react-scripts test --env=jest-environment-jsdom-sixteen --coverage --verbose",
    "lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx src --color",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "cross-env CI=true react-scripts test --env=jest-environment-jsdom-sixteen --bail --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-regular-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "final-form": "^4.19.1",
    "final-form-focus": "^1.1.2",
    "graphql": "^15.0.0",
    "jodit-react": "^1.0.42",
    "rc-slider": "^9.2.4",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.4.0",
    "react-html-parser": "^2.0.2",
    "react-rating": "^2.0.5",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-select": "^3.1.0",
    "remove": "^0.1.5",
    "styled-components": "^5.1.0",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4",
    "@testing-library/dom": "^7.2.1",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@types/final-form-focus": "^1.1.1",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/rc-slider": "^8.6.5",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-router-dom": "^5.1.4",
    "@types/react-select": "^3.0.11",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "graphql-tag": "^2.10.3",
    "jest-environment-jsdom-sixteen": "^1.0.3"
  }
}

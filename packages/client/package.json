{
  "name": "cb-client",
  "version": "0.1.0",
  "homepage": ".",
  "main": "./electron/main.js",
  "private": true,
  "scripts": {
    "start": "run-p start-cra start-server",
    "start-cra": "cross-env PORT=3201 react-scripts start",
    "start-server": "cross-env NODE_ENV=development node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx src --color",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "cross-env CI=true react-scripts test --bail --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.11",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "apollo-boost": "^0.4.7",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "final-form": "^4.18.6",
    "final-form-focus": "^1.1.2",
    "graphql": "^14.5.8",
    "jodit-react": "^1.0.33",
    "json-server": "^0.15.1",
    "rc-slider": "^8.7.1",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-final-form": "^6.3.3",
    "react-html-parser": "^2.0.2",
    "react-rating": "^2.0.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "react-select": "^3.0.8",
    "react-table": "^7.0.0-rc.15",
    "styled-components": "^4.4.1",
    "swr": "^0.1.12",
    "typescript": "3.7.2"
  },
  "devDependencies": {
    "@types/final-form-focus": "^1.1.1",
    "@types/rc-slider": "^8.6.5",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-router-dom": "^5.1.2",
    "@types/react-select": "^3.0.8",
    "@types/styled-components": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0"
  }
}
